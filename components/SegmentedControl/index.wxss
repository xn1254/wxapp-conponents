.ci-segmented-control-wrapper{
    margin-left: 40rpx;
    margin-right: 40rpx;
    min-height: 54rpx;
    display: flex;
    justify-content: space-between;
    border: 2rpx solid #108ee9;
    border-radius: 10rpx;
    color: #108ee9;
}
.ci-segmented-control-checked{
    background: #108ee9;
    color: #ffffff
}
.ci-segmented-control-disabled{
    opacity: 0.5;
}
.ci-segmented-control{
    flex: 1;
    text-align: center;
    line-height: 84rpx
}