.ci-badge {
  position: relative;
  display: inline-block;
  line-height: 1;
  vertical-align: middle;
  width: 100%;
}
.ci-badge-text{
  height: 36rpx;
  line-height: 36rpx;
  min-width: 18rpx;
  border-radius: 24rpx;
  padding: 0 10rpx;
  text-align: center;
  font-size: 12px;
  color: #fff;
  background-color: #ff5b05;
  font-family: Helvetica Neue,Helvetica,PingFang SC,Hiragino Sans GB,Microsoft YaHei,\\5FAE\8F6F\96C5\9ED1,SimSun,sans-serif;
}
.ci-badge-count {
  position: absolute;
  transform: translateX(50%);
  top: -12rpx;
  right: 0;
  height: 36rpx;
  border-radius: 18rpx;
  min-width: 36rpx;
  background: #ed3f14;
  border: 2rpx solid transparent;
  color: #fff;
  line-height: 36rpx;
  text-align: center;
  padding: 0 10rpx;
  font-size: 12px;
  white-space: nowrap;
  transform-origin: -10% center;
  z-index: 10;
  box-shadow: 0 0 0 2rpx #fff;
  box-sizing: border-box;
  text-rendering: optimizeLegibility;
}
.ci-badge-count-alone {
  top: auto;
  display: block;
  position: relative;
  transform: translateX(0);
}
.ci-badge-dot {
  position: absolute;
  transform: translateX(-50%);
  transform-origin: 0 center;
  top: -8rpx;
  right: -16rpx;
  height: 16rpx;
  width: 16rpx;
  border-radius: 100%;
  background: #ed3f14;
  z-index: 10;
  box-shadow: 0 0 0 2rpx #fff;
}
.ci-badge-dot-large{
  width: 32rpx;
  height: 32rpx;
  top: -16rpx;
  right: -32rpx;
}
.ci-badge-corner {
  width: 160rpx;
  padding: 16rpx;
  position: absolute;
  right: -64rpx;
  top: 16rpx;
  background-color: #ff5b05;
  color: #fff;
  white-space: nowrap;
  transform: rotate(45deg);
  text-align: center;
  font-size: 30rpx;
}
