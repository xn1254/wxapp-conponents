.ci-slider {
  position: relative;
  z-index: 1;
  display: -ms-flexbox;
  display: flex;
  -ms-flex-align: center;
  align-items: center;
}
.ci-slider__rail {
  width: 100%;
  height: 8rpx;
  margin: 30rpx 0;
  background-color: #e9e9e9;
  border-radius: 8rpx;
  vertical-align: middle;
  position: relative;
}
.ci-slider__track {
  position: absolute;
  left: 0;
  height: 8rpx;
  border-radius: 8rpx;
  background-color: #33cd5f;
}
.ci-slider__handle {
  background-color: #fff;
  border-radius: 50%;
  height: 56rpx;
  left: 0;
  top: 50%;
  position: absolute;
  width: 56rpx;
  box-shadow: 0 0 8rpx rgba(0, 0, 0, 0.2);
  transform: translate3d(-50%, -50%, 0);
}
.ci-slider__handle--last {
  z-index: 2;
}
.ci-slider__mark {
  position: absolute;
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background-color: #ccc;
  transform: translateX(-50%);
}
.ci-slider__max,
.ci-slider__min {
  font-size: 28rpx;
  color: #888;
}
.ci-slider__min {
  margin-right: 24rpx;
}
.ci-slider__max {
  margin-left: 24rpx;
}
.ci-slider--disabled {
  opacity: 0.3;
}
