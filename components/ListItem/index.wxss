.ci-list-item{
    background: #fff;
    padding-left: 30rpx;
    display: flex;
    justify-content: space-between;
    border-bottom: 2rpx solid #888888;
    padding-bottom: 14rpx;
    padding-top: 14rpx;
    padding-right: 30rpx
}
.ci-list-item:active{
    background: #dddddd
}
.ci-hide-active:active{
    background: #fff
}
.ci-list-item-top{
    align-items: flex-start
}
.ci-list-item-middle{
    align-items: center
}
.ci-list-item-bottom{
    align-items: flex-end
}
.ci-thumb-wrapper{
    margin-right: 30rpx
}
.ci-content-wrapper{
    display: flex;
    line-height: 1.5;
