.ci-step {
  font-size: 0;
  position: relative;
  display: inline-block;
  box-sizing: border-box;
  padding: 0 10rpx;
  vertical-align: top;
}
.ci-step--vertical {
  padding-bottom: 60rpx;
}
.ci-step--vertical .ci-step__hd {
  float: left;
}
.ci-step--vertical .ci-step__bd {
  overflow: hidden;
  display: block;
  margin-left: 80rpx;
  margin-top: 0;
  text-align: left;
  clear: inherit;
}
.ci-step--vertical .ci-step__ft {
  position: absolute;
  left: 38rpx;
  top: 0;
  height: 100%;
  width: 2rpx;
  padding: 60rpx 0 8rpx;
  margin-left: 0;
}
.ci-step--vertical .ci-step__ft:after {
  width: 2rpx;
  height: 100%;
}
.ci-step__ft {
  position: absolute;
  left: 50%;
  width: 100%;
  top: 24rpx;
  padding: 0 48rpx;
  margin-left: 6rpx;
  box-sizing: border-box;
}
.ci-step__ft:after {
  content: "";
  display: inline-block;
  background: #ddd;
  height: 2rpx;
  border-radius: 2rpx;
  width: 100%;
  transition: background 0.3s;
  position: relative;
  left: -4rpx;
}
.ci-step__icon {
  box-sizing: border-box;
  font-size: 22rpx;
  width: 44rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  background: #fff;
  position: relative;
  z-index: 2;
  margin: 0 auto;
  border: #e9eaec solid 2rpx;
}
.ci-step__icon_small{
  width: 36rpx;
  height: 36rpx
}
.ci-step__thumb {
  width: 100%;
  height: 100%;
  display: inline-block;
  overflow: hidden;
}
.ci-step--process .ci-step__icon {
  border: #387ef5 solid 2rpx;
  color: #fff;
  background: #387ef5;
}
.ci-step--wait .ci-step__icon {
  border: #e9eaec solid 2rpx;
  color: #e9eaec;
}
.ci-step--wait .ci-step__ft:after {
  background: #387ef5;
}
.ci-step--finish .ci-step__icon {
  border: #387ef5 solid 2rpx;
  color: #387ef5;
}
.ci-step--finish .ci-step__ft:after {
  background: #387ef5;
}
.ci-step--error .ci-step__icon {
  border: #ef473a solid 2rpx;
  color: #ef473a;
}
.ci-step--error .ci-step__ft:after {
  background: #ef473a;
}
.ci-step__hd {
  width: auto;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  box-sizing: border-box;
}
.ci-step__bd {
  margin-top: 20rpx;
  text-align: center;
  clear: both;
}
.ci-step__title {
  font-size: 32rpx;
  font-weight: 700;
  color: #000;
}
.ci-step__content {
  font-size: 24rpx;
  margin-top: 6rpx;
  color: #b2b2b2;
}
